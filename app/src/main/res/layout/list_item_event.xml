<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    tools:ignore="RtlHardcoded">

    <TextView
        android:id="@+id/event_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/event_time_range_text_view"
        android:ellipsize="end"
        android:maxLines="2"
        tools:text="СТРАХИ В МИРЕ ИНФОРМАЦИОННОЙ БЕЗОПАСНОСТИ"/>

    <TextView
        android:id="@+id/event_time_range_text_view"
        style="@style/SecondaryText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:maxLines="1"
        tools:text="12:00 - 13:00"/>

    <TextView
        android:id="@+id/instructor_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/event_name_text_view"
        android:ellipsize="end"
        android:maxLines="2"
        tools:text="Мистер Бин"/>

    <TextView
        android:id="@+id/description_text_view"
        style="@style/SecondaryText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/instructor_text_view"
        android:layout_toLeftOf="@+id/event_time_range_text_view"
        android:ellipsize="end"
        android:maxLines="2"
        tools:text="Здесь может быть описание события"/>
</RelativeLayout>